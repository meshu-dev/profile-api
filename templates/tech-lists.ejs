<style>
  #tech-list-desc {
    margin-bottom: 15px;
  }
  .tech-list-title { 
    font-weight: bold;
    font-size: 16px;
    margin-bottom: 5px;
  }
  .tech-list-items {
    margin-bottom: 10px;
  }
</style>
<div>
  <% if (includeDesc) { %>
    <div id="tech-list-desc">These are the technologies that I've worked 
      with both commercially and in personal projects.</div>
  <% } %>
  <% if (techLists) { %>
    <% for (const technology of techLists) { %>
      <div class="tech-list-title"><%- technology['title'] %></div>
      <div class="tech-list-items">
        <% for (const tag of technology['list']) { %>
          <span><%- tag %></span>
        <% } %>
      </div>
    <% } %>
  <% } %>
</div>
